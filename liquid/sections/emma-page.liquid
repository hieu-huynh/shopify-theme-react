<style>
    .gradient {
        background: linear-gradient(
            0deg, #FFF6EB 0%, rgba(255, 246, 235, 0) 100%);
        height: 100%;
        margin: 0;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
    
    .emma-accordion {
        padding: 1rem 15% 10rem;
    }

    @media screen and (max-width: 568px) {
        .emma-accordion {
            padding: 1rem;
            padding-bottom: 5rem;
            margin-top: -3rem;
        }
    }
</style>

<div class="emma-page">
    {%- if section.settings.show_image -%}
    <div class="emma-page__banner">
        <img src="{{ section.settings.banner_image | img_url: 'master' }}" />
    </div>
    {%- endif -%}
    <div class="emma-page__content">
        <div class="emma-page__header emma__heading emma__heading--indigo">{{ page.title | escape }}</div>
        <div class="emma-page__body">
            {{ page.content }}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Emma Page",
  "settings": [
    {
        "type": "image_picker",
        "id": "banner_image",
        "label": "image"
    },
    {
        "type": "checkbox",
        "id": "show_image",
        "default": true,
        "label": "Show Image?"
    }
  ]
}
{% endschema %}
